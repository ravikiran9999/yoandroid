<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView android:id="@+id/imv_popup_close"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_magazine_close_black"
        android:layout_gravity="right"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:background="@color/gray"
        android:padding="5dp"/>

    <ImageView android:id="@+id/imv_dialog_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_popup_height"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:paddingBottom="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:maxLines="2"/>


    <TextView
        android:id="@+id/dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:paddingBottom="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:ellipsize="end"
        android:maxLines="5"/>

    <TextView
        android:id="@+id/tv_live_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:paddingBottom="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:ellipsize="end"
        android:maxLines="2"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_live_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="left|center"
        android:paddingBottom="20dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal"
        android:ellipsize="end"
        android:maxLines="2"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/yes_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="10dp"/>
    </LinearLayout>


</LinearLayout>