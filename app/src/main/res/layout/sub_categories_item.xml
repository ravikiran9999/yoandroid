<?xml version="1.0" encoding="utf-8"?>
<com.yo.android.widgets.SquareItemLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sq_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/xxsmall_margin"
    android:background="@color/grey_divider"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_magazine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/title_background"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="16sp"
        tools:text="sub category" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/title"
        android:layout_gravity="end|bottom"
        android:padding="2dp"
        app:buttonTint="@color/colorPrimary" />

</com.yo.android.widgets.SquareItemLinearLayout>