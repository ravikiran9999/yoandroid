<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">

            <solid android:color="#FFFFFF" />
            <size
                android:width="120dp"
                android:height="120dp" />

        </shape>
    </item>
    <item
        android:bottom="10dp"
        android:left="90dp"
        android:right="10dp"
        android:top="90dp">
        <shape android:shape="oval">
            <solid android:color="@color/dark_green" />
            <stroke android:color="@color/gold_stroke" android:width="1dp"/>
            <size
                android:width="16dp"
                android:height="16dp" />
        </shape>
    </item>
</layer-list>